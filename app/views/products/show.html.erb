<div class="row">
  <div class="col-lg-12 mt-3">
    <h1>Detalles del producto</h1>

    <div class="d-flex">
      <%= link_to "Regresar al listado de productos", products_path, class:"btn btn-success mb-3" %>
      <%= link_to "Editar este producto", edit_product_path(@product), class:"btn btn-primary mb-3" %>
      <%= button_to "Eliminar este producto", @product, method: :delete, class:"btn btn-danger mb-3" %>
      <%= link_to "Crear movimiento", new_movement_product_path(@product), class:"btn btn-warning mb-3"%>
    </div>
    

    <div class="card">
      <table class="table">
        <tr>
          <td><b> Nombre del producto</b></td>
          <td> <%= @product.name %> </td>
        </tr>
        <tr>
          <td><b> Referencia</b></td>
          <td> <%= @product.reference %> </td>
        </tr>
        <tr>
          <td><b> Descripción</b></td>
          <td> <%= @product.description %> </td>
        </tr>
        <tr>
          <td><b> Cantidad actual: </b></td>
          <td> <%= 0 %> </td>
        </tr>
        <tr>
          <td><b> Fecha de creación</b></td>
          <td> <%= @product.created_at %> </td>
        </tr>
      </table>
    </div>
  </div>
</div>


<div class="row mt-5">
  <div class="col-lg-12">
    <div class="card">
      <h1>Movimientos</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>Cantidad</th>
            <th>Comentario</th>
            <th>Fecha/Hora</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>

